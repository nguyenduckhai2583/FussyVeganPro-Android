<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_login_edittext_background">

    <TextView
        android:id="@+id/itemReview_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/itemReview_RatingStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemReview_Title"
        android:numStars="5"
        android:isIndicator="true"
        android:theme="@style/RatingBar"
        style="?android:attr/ratingBarStyleSmall"/>

    <TextView
        android:id="@+id/itemReview_Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemReview_RatingStar"
        android:textColor="@color/black"
        android:text="I like this review very much"/>

    <TextView
        android:id="@+id/itemReview_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-05-07"
        android:layout_alignParentRight="true"/>
    
    <TextView
        android:id="@+id/itemReview_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemReview_Date"
        android:layout_alignParentRight="true"
        android:text="Hank Hill"/>

</RelativeLayout>